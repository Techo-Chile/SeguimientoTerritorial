<%= form_with model: @community, local: true do |form| %>

  <% if @community.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@community.errors.count, "error") %> prohibited
        this community from being saved:
      </h2>
      <ul>
        <% @community.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :'País de la comunidad' %><br>
    <%= form.text_field :country %>
  </p>

  <p>
    <%= form.label :'Departamento/Provincia/Región' %><br>
    <%= form.text_field :province_region %>
  </p>

  <p>
    <%= form.label :'Municipalidad/Comuna/Localidad' %><br>
    <%= form.text_field :municipality_location %>
  </p>

  <p>
    <%= form.label :'Nombre de la comunidad:' %><br>
    <%= form.text_field :community_name %>
  </p>
  <p>
    <%= form.label :'Estado de la comunidad:' %><br>
    <%= form.text_field :community_status %>
  </p>

  <p>
    <%= form.submit "Enviar datos"%>
  </p>

<% end %>
